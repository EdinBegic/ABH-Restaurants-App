{{main-navigation}}
<div class="login-background">
  <div class="login-container container">
    <div class="row login">
      <div class="col-md-5 ">
        <div class="login-label">Create account</div>
      </div>
      <div class="col-md-7">
        <div class="registration-label">{{#link-to 'login' id="registration-link"}}Login{{/link-to}}</div>
      </div>
    </div>
    <div class="form-group">
      <div class="row login ">
        <div class="col-md-12">
          {{input class="form-control login-input" placeholder='First Name' value=model.user.firstName}}
        </div>
      </div>
      <div class="row login ">
        <div class="col-md-12">
          {{input class="form-control login-input" placeholder='Last Name' value=model.user.lastName}}
        </div>
      </div>
      <div class="row login ">
        <div class="col-md-12">
          {{input class="form-control login-input" placeholder='Email' value=model.user.email}}
        </div>
      </div>
      <div class="row login ">
        <div class="col-md-12">
          {{input class="form-control login-input" placeholder='Phone Number' value=model.user.phoneNumber}}
        </div>
      </div>
      <div class="row login">
        <div class="col-md-6" id='select-right'>
          <select class="form-control login-input" onchange={{action "listCitiesForCountry" value="target.value" }}>
            {{#each model.locations as |location|}}
            <option value="{{location.country}}">{{location.country}}</option>
            {{/each}}
          </select>
        </div>
        <div class="col-md-6" id='select-left'>
          <select class="form-control login-input" onchange={{action "setLocationId" value="target.value" }}>
            {{#each model.cities as |location|}}
            <option value="{{location.id}}">{{location.city}}</option>
            {{/each}}
          </select>
        </div>

      </div>
      <div class="row login">
        <div class="col-md-12">
          {{input type="password" class="form-control login-input" placeholder='Password' value=model.user.password}}
        </div>
      </div>
      <div class="row login ">
        <div class="col-md-12">
          {{input type="password" class="form-control login-input" placeholder='Confirm password' value=model.user.confirmedPassword}}
        </div>
      </div>
      <div class="row login ">
        <div class="col-md-12">
          <button type="submit" class="form-control login-button btn" {{action 'createAccount'}}>Create Account</button>
        </div>
      </div>
    </div>
  </div>
</div>